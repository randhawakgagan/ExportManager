@model ExportManager.DBModel.LicenseAdd


@{

}

<!DOCTYPE html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    @using (Html.BeginForm("Additem", "LicenseAdd"))
    {
        @Html.AntiForgeryToken()

        <div id="item_data">
            <h4>Item Add</h4>



            <div>
                <label>Item_list</label>
                <div>



                    @Html.DropDownListFor(x => x.SelectedItems, Model.Items, "select")

                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.No_Units)
                <div>
                    @Html.EditorFor(model => model.No_Units)
                    @Html.ValidationMessageFor(model => model.No_Units, "")
                </div>
            </div>
            <div>
                <div>
                    <input type="submit"  value="ADD" id="itm_add" class="btn btn-default" />
                </div>
            </div>

        </div>

        if (Model.Itms_db != null)
        {
            <h3>ITEMS ADDED</h3>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Item_Name</th>
                    <th>No_Units</th>
                    
                </tr>

                @foreach (var item in Model.Itms_db)
                {
                    string selectedRow = "";
                 
                        selectedRow = "success";
                   
                    <tr class="@selectedRow">
                        <td>
                            @Html.ActionLink("Select", "Index")
                        </td>
                        <td>
                            @item.Itm_names
                        </td>
                        <td>
                            @item.Itm_No_Units
                        </td>
                        
                    </tr>
                }

            </table>
        }
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
